# SIMPLE ENV CONFIG FOR NORTHFLANK UI
# Copy-paste these one by one into Northflank Environment Variables

DEVICE=cuda
BATCH_SIZE=32
# Note: Reduced from 64 to 32 to prevent GPU OOM crashes
# A100 80GB can handle 32-48, start with 32 for stability
EPOCHS=50
LEARNING_RATE=1e-4
EARLY_STOPPING=10

ATOMIC_EMBED_DIM=128
ATOMIC_HIDDEN_DIM=256
ATOMIC_LAYERS=3

REFINER_D_MODEL=128
REFINER_NHEAD=4
REFINER_LAYERS=3
REFINER_FFN_DIM=512

DATA_DIR=data/training_pairs_mega_331p
OUTPUT_DIR=runs/hybrid_a100

PYTHONUNBUFFERED=1
TORCH_HOME=/app/.cache/torch
CUDA_VISIBLE_DEVICES=0
